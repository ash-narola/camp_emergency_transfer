<%= content_for :heading, "All Patients" %>
<div class="ml-auto">
  <%= will_paginate @patients %>
</div>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Age</th>
      <th>Admission Date</th>
      <th>Medical Record</th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.name, emergency_transfer_path(patient) %></td>
        <td><%= patient.age %></td>
        <td><%= patient.admission.created_at.strftime('%Y-%m-%d') %></td>
        <td><%= patient.mr.truncate(30) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="ml-auto">
  <%= will_paginate @patients %>
</div>
